{
  "expo": {
    "name": "exp",
    "slug": "exp",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.exp",
      "infoPlist": {
        "NSCameraUsageDescription": "需要使用相机来扫描条码",
        "NSMicrophoneUsageDescription": "需要使用麦克风来扫描条码"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA"
      ],
      "package": "com.anonymous.exp"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "需要使用相机来扫描条码",
          "microphonePermission": "需要使用麦克风来扫描条码"
        }
      ]
    ]
  }
}
